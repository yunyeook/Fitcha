<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fitcha.model.dao.LikeDao">
	<select id="selectChallengeLike" parameterType="like" resultType="like">
		SELECT * 
	 	 FROM challenge_like
	    WHERE challenge_board_id = #{boardId}
		  AND writer = #{writer}
	</select>

	<!-- 좋아요 등록 -->
	<insert id="insertChallengeLike" parameterType="like">
		INSERT INTO challenge_like(challenge_board_id, writer)
		     VALUES (#{boardId},#{writer})
	</insert>
	
	<!-- 좋아요 취소 -->
	<delete id="deleteChallengeLike" parameterType="like">
		DELETE FROM challenge_like
	     WHERE challenge_board_id = #{boardId}
		   AND writer = #{writer}
	
	</delete>

</mapper>