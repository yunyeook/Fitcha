<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fitcha.model.dao.FileDao">
	<!-- 챌린지 파일 목록 조회  -->
	<select id="selectChallengeFileList" parameterType="int" resultType="file">
		SELECT *
	 	FROM challenge_file
		WHERE challenge_board_id = #{id}
	</select> 
	<delete id="deleteChallengeFile" parameterType="int">
		DELETE FROM challeng_file
		WHERE challenge_file_id =#{id}
	</delete>
	<insert id="insertChallengeFile" parameterType="challengeFile">
		INSERT INTO (challenge_board_id, file_upload_name, file_original_name, file_url, writer)
			 VALUES (#{challengeBoardId},#{fileUploadName},#{fileOriginalName},#{fileUrl},#{writer})
	</insert>

	

</mapper>