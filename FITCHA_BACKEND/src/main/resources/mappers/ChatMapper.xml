<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.fitcha.model.dao.ChatDao">

  <!-- 채팅방 목록 조회 -->
  <select id="getRooms" parameterType="SearchChallenge" resultType="chatRoom">
    SELECT * 
      FROM chat_room
     <!-- 검색어가 있을 때만 조건 적용 -->
  <if test="word != null and word != ''">
     WHERE name LIKE CONCAT('%', #{word}, '%')
  </if>
    ORDER BY reg_date DESC

  </select>

  <!-- 채팅방 생성 -->
  <insert id="createRoom" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO chat_room (name,writer)
    VALUES (#{name}, #{writer})
  </insert>

  <!-- 메시지 목록 조회 -->
  <select id="getMessages" resultType="com.ssafy.fitcha.model.dto.ChatMessage">
    SELECT 
      id,
      room_id as roomId,
      sender,
      message as content,
      UNIX_TIMESTAMP(timestamp) * 1000 as timestamp
    FROM chat_message
    WHERE room_id = #{roomId}
    ORDER BY timestamp ASC
  </select>

  <!-- 메시지 저장 -->
  <insert id="sendMessage" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO chat_message (room_id, sender, message, timestamp)
    VALUES (#{roomId}, #{sender}, #{content}, FROM_UNIXTIME(#{timestamp} / 1000))
  </insert>
  
  <select id="getRoom" resultType="ChatRoom">
  SELECT * FROM chat_room WHERE id = #{roomId}
</select>

 <!-- 채팅방 이름으로 조회 -->
  <select id="findRoomByName" resultType="ChatRoom">
    SELECT * FROM chat_room WHERE name = #{name}
  </select>
  
  <!--채팅방 삭제-->
  
	<delete id="deleteRoom" parameterType="int">
		DELETE FROM chat_room
		      WHERE id =#{id}
	</delete>
</mapper>
